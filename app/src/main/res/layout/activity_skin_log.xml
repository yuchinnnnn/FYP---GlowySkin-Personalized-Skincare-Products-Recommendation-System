<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkinLog">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2D5D7"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/previous" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skin Log"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/reminder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <TextView
            android:id="@+id/reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Please take at least one front selfie"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/reminder_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/left_selfie_layout"
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.personalizedskincareproductsrecommendation.FaceOutlineView
                android:id="@+id/leftFaceOutlineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/left_selfie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="From the left"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/left_selfie_layout" />

        <androidx.cardview.widget.CardView
            android:id="@+id/front_selfie_layout"
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@+id/left_selfie_layout"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.personalizedskincareproductsrecommendation.FaceOutlineView
                android:id="@+id/frontFaceOutlineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/front_selfie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Front"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/front_selfie_layout"
            app:layout_constraintTop_toBottomOf="@+id/front_selfie_layout" />

        <androidx.cardview.widget.CardView
            android:id="@+id/right_selfie_layout"
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toEndOf="@+id/front_selfie_layout"
            app:layout_constraintTop_toTopOf="parent">

            <com.example.personalizedskincareproductsrecommendation.FaceOutlineView
                android:id="@+id/rightFaceOutlineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/right_selfie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="From the right"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/right_selfie_layout"
            app:layout_constraintTop_toBottomOf="@+id/right_selfie_layout" />

        <androidx.cardview.widget.CardView
            android:id="@+id/neck_selfie_layout"
            android:layout_width="90dp"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#D9D9D9"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="@+id/front_selfie_layout"
            app:layout_constraintTop_toBottomOf="@+id/front_selfie_layout">

            <com.example.personalizedskincareproductsrecommendation.FaceOutlineView
                android:id="@+id/neckOutlineView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/neck_selfie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/baseline_add_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Neck area"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/neck_selfie_layout"
            app:layout_constraintTop_toBottomOf="@+id/neck_selfie_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/done_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:text="Done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>