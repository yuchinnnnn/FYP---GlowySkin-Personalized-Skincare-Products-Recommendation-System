            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/typeLabel"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/function"
