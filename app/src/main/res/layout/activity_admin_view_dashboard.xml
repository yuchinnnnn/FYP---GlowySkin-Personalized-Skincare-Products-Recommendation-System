<!--            android:id="@+id/feedbackTextView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/feedback_section"-->
<!--            app:layout_constraintStart_toStartOf="@+id/feedback_section"-->
<!--            android:text="Feedback: Loading..." />-->

        <TextView
            android:id="@+id/chart_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/oil_skin_layout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Analysis Chart:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@+id/chart_section"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
